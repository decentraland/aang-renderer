.switcher {
    position: absolute;
    right: 0;
    top: 0;
    height: 32px;
    width: 80px;
    flex-direction: row;
    background-color: rgb(32, 30, 36);
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    border-bottom-left-radius: 8px;
    overflow: hidden;
}

.switcher__button {
    flex-grow: 1;
    transition-duration: 0.1s;
    background-size: 20px 20px;
}

.switcher__button:disabled {
    background-color: rgb(128, 128, 128);
}

.switcher__button--selected {
    background-color: rgb(231, 63, 78);
}

.zoomer {
    position: absolute;
    top: 0;
    left: 0;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    border-bottom-left-radius: 8px;
    overflow: hidden;
}

.zoomer__button {
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    background-color: rgba(0, 0, 0, 0.7);
    width: 32px;
    height: 32px;
    background-size: 85% 85%;
    transition-duration: 0.15s;
}

.zoomer__button:hover {
    background-color: rgb(0, 0, 0);
}

.zoomer__button:active {
    background-size: 60% 60%;
}

.zoomer__button--in {
    background-image: url("project://database/Assets/UI/Sprites/ZoomIn.png?fileID=2800000&guid=951db5e9d7cdc4e64bc3f990fc130fa2&type=3#ZoomIn");
}

.zoomer__button--out {
    background-image: url("project://database/Assets/UI/Sprites/ZoomOut.png?fileID=2800000&guid=02a7e65a07d244303a2618485f704d8b&type=3#ZoomOut");
}

.emote-controls {
    bottom: 0;
    left: 0;
    position: absolute;
    flex-direction: row;
}

.emote-controls__button {
    height: 32px;
    background-color: rgb(255, 255, 255);
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    border-bottom-left-radius: 8px;
    font-size: 14px;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    transition-duration: 0.15s;
}

.emote-controls__button:hover {
    translate: 0 -3px;
}

.emote-controls__button:active {
    background-color: rgb(200, 200, 200);
}

.emote-controls__button-play {
    flex-direction: row;
    align-items: center;
    padding-left: 7px;
    padding-right: 12px;
    padding-top: 0;
    padding-bottom: 0;
}

.emote-controls__button-play > #Icon {
    background-image: url("project://database/Assets/UI/Sprites/Stop.png?fileID=2800000&guid=28e0d51a19ed34aecb058780d9b403f4&type=3#Stop");
    width: 30px;
    height: 30px;
    -unity-background-image-tint-color: rgb(0, 0, 0);
}

.emote-controls__button-play > #Title {
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-left: 0;
    margin-right: 0;
    margin-top: 1px;
    margin-bottom: 0;
}

.emote-controls__button-play--stopped > #Icon {
    background-image: url("project://database/Assets/UI/Sprites/PlayArrow.png?fileID=2800000&guid=ca1d83f1697844068946eb106c84ca99&type=3#PlayArrow");
}

.emote-controls__button-mute {
    width: 32px;
    background-image: url("project://database/Assets/UI/Sprites/SoundOn.png?fileID=2800000&guid=5f1250c501834456a8e777e82527654c&type=3#SoundOn");
    -unity-background-image-tint-color: rgb(0, 0, 0);
    background-size: 75% 75%;
}

.emote-controls__button-mute--muted {
    background-image: url("project://database/Assets/UI/Sprites/SoundOff.png?fileID=2800000&guid=c0b3991a86c5d476fba7cdcc52b2e782&type=3#SoundOff");
}

.loader {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    justify-content: center;
    align-items: center;
}

.loader__icon {
    width: 64px;
    height: 64px;
    background-image: url("project://database/Assets/UI/Sprites/Spinner.png?fileID=2800000&guid=7277d900fbbbd4d2986e2ff79fd14803&type=3#Spinner");
}
